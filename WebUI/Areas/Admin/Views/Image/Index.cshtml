@using Application.Common.Responses
@using Application.Common.Supports
@using Domain.Entities
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    PagingResponse<ImageEntity> model = Model ?? new PagingResponse<ImageEntity>();
}

@section AddToHead {
    <link rel="stylesheet" href="~/admin/css/list.css" />
    <link rel="stylesheet" href="~/admin/css/form.css" />
    <link rel="stylesheet" href="~/admin/css/paging.css" />
    <link rel="stylesheet" href="~/libs/bootstrap-datepicker/css/bootstrap-datepicker.css" />
    <script src="~/libs/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
}

<p class="layout-title">
    Danh sách ảnh trên hệ thống
</p>

<div class="container-fluid flex-grow-1 lb-body">
    <div class="row">
        <div class="list-control col-12 col-lg-4 col-xl-3">
            <div class="list-control-wrap p-3">
                <div class="row">
                    <div class="filter-control my-2">
                        <div class="form-title-wrap">
                            <p class="form-title">Lọc danh sách</p>
                        </div>
                        <div class="row">
                            <div class="col-12 my-2">
                                <label for="filter-name" class="form-label">Lọc theo tiêu đề:</label>
                                <input type="text" class="form-control" name="search" id="search" autocomplete="off" placeholder="Nhập nội dung tìm kiếm">
                            </div>

                            <div class="col-12 col-md-6 col-lg-12 my-2">
                                <label for="filter-range-date" class="form-label">Lọc theo ngày đăng: </label>
                                <div class="input-group input-daterange" id="filter-range-date">
                                    <input type="text" class="form-control form-control-left" name="startDate" id="startDate">
                                    <div class="input-group-text"><i class="fa-solid fa-caret-right"></i></div>
                                    <input type="text" class="form-control form-control-right" name="endDate" id="endDate">
                                </div>
                                    @* <div class="col-4">
                                        <label for="filter-range-date" class="form-label">Thứ tự: </label>
                                        <div class="input-group" id="filter-range-date-order">
                                            <input type="radio" class="btn-check" name="asc" value="true" id="asc" autocomplete="off" />
                                            <label class="btn btn-outline-warning form-control-left" for="asc"><i class="fa-solid fa-arrow-down-a-z"></i></label>

                                            <input type="radio" class="btn-check" name="asc" value="false" id="desc" autocomplete="off" />
                                            <label class="btn btn-outline-warning form-control-right" for="desc"><i class="fa-solid fa-arrow-down-z-a"></i></label>
                                        </div>
                                    </div> *@
                            </div>

                            <div class="col-12 col-md-6 col-lg-12 my-2">
                                <label for="order" class="form-label">Sắp xếp:</label>
                                <select class="form-select form-control" id="order" name="order" aria-label="Chọn chế độ sắp xếp">
                                    <option value="asc-date">Tăng dần theo ngày</option>
                                    <option value="desc-date">Giảm dần theo ngày</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    @if (model.Max > 0)
                    {
                        <div class="paging-control my-2">
                            <div class="form-title-wrap">
                                <p class="form-title">Điều khiển trang</p>
                            </div>
                            <div class="row">
                                <div class="col-6 col-md-3 col-lg-6 my-2">
                                    <label for="page-amount" class="form-label">Số lượng/trang:</label>
                                    <input type="number" class="form-control" name="perPage" id="perPage">
                                </div>
                                <div class="col-6 col-md-3 col-lg-6 my-2">
                                    <label for="page-number" class="form-label">Nhập trang: </label>
                                    <input type="number" class="form-control" name="currentPage" id="currentPage">
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-12 paging-small my-2">
                                @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Components/Paging.cshtml", new { Current = model.Current, Max = model.Max, Amount = 4, Key = "small" })
                            </div>
                        </div>
                    }
                    <div class="col-12 btn-search-wrap my-2">
                        <button id="btn-search" onclick="search()" title="Tìm kiếm"><i class="fa-solid fa-magnifying-glass"></i> Tìm kiếm</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="list-data col-12 col-lg-8 col-xl-9">
            <div class="list-data-wrap p-3">
                <div class="py-2 d-flex justify-content-end">
                    <button type="button" onclick="window.location.href = '/admin/image/item'" class="btn btn-create" title="Tạo mới ảnh">Tạo mới</button>
                </div>
                @if (model.List.Count > 0)
                {
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Ảnh</th>
                                <th scope="col">Tiêu đề</th>
                                <th class="d-none d-md-table-cell" scope="col">Loại ảnh</th>
                                <th class="d-none d-md-table-cell" scope="col">Ngày tạo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < model.List.Count; i++)
                            {
                                <tr>
                                    <td class="">@((model.Current - 1) * model.PerPage + i + 1)</td>
                                    <td class="td-image">
                                        <img src="@(PathSupport.GetUploadThumbDefaultPath(model.List[i].Name, model.List[i].Type))" />
                                    </td>
                                    <td class="">
                                        <a class="item-link" href="/admin/image/item?id=@(model.List[i].Id)" title="Chuyển sang trang chi tiết ảnh">@(model.List[i].Title)</a>
                                    </td>
                                    <td class="d-none d-md-table-cell">@(model.List[i].Type == 1 ? "Lớn" : "Lớn/thu nhỏ")</td>
                                    <td class="d-none d-md-table-cell">@(model.List[i].CreatedDate?.ToString("dd/MM/yyyy"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="col-12 paging-large my-2">
                        @await Html.PartialAsync("~/Areas/Admin/Views/Shared/Components/Paging.cshtml", new { Current = model.Current, Max = model.Max, Amount = 5, Key = "large" })
                    </div>
                } else
                {
                    <div class="no-data">
                        <img title="Không có dữ liệu" alt="Hình ảnh biểu thị cho danh sách trống" src="/shared/images/no_data.svg" />
                        <p>Chưa có ảnh nào!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section AddToFooter {
    <script src="~/admin/js/paging.js"></script>
    <script type="text/javascript">
        // $("input[name=asc][value='" + urlParams.get("asc") + "']").prop('checked', true);
        var urlParams = new URLSearchParams(window.location.search);
        $("#search").val(urlParams.get("search"));
        $("#startDate").val(urlParams.get("startDate") ?? '01/01/2024');
        $("#endDate").val(urlParams.get("endDate") ?? new Date().toLocaleDateString('vi-VN'));
        var perPage = urlParams.get("perPage") ?? '';
        $("#perPage").val(perPage == '' ? @(model.PerPage) : perPage);
        $("#currentPage").val(@(model.Current));
        $("#order").val(urlParams.get("order") ?? 'asc-date');

        $('#filter-range-date').datepicker({
            format:'dd/mm/yyyy',
            weekStart: 1,
            templates: {
                leftArrow: '<i class="fa-solid fa-angle-left"></i>',
                rightArrow: '<i class="fa-solid fa-angle-right"></i>',
            },
            todayHighlight: true,
            endDate: new Date(),
        });

        function search() {
            var params = [];
            var key = '';
            key = $("#search").val();
            if (key != null && key != '') {
                params.push('search=' + key);
            }
            key = $("#startDate").val();
            if (key != null && key != null) {
                params.push('startDate=' + key);
            }
            key = $("#endDate").val();
            if (key != null && key != null) {
                params.push('endDate=' + key);
            }
            key = $("#perPage").val();
            if (key != null && key != null) {
                params.push('perPage=' + key);
            }
            key = $("#order").val();
            if (key != null && key != null) {
                params.push('order=' + key);
            }
            key = $("#currentPage").val();
            if (key != null && key != null) {
                params.push('currentPage=' + key);
            }

            window.location.search = params.join("&");
        }

        function selectPage(key, page) {
            if (key == "large" || key == "small") {
                $("#currentPage").val(page);
                search();
            }
        }
    </script>
}